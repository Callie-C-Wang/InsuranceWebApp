  </servlet>
  <servlet-mapping>
    <servlet-name>saveVehicleDetail</servlet-name>
    <url-pattern>/SaveVehicleDetail.do</url-pattern>
  </servlet-mapping>
  
  <resource-ref>
    <description>DB Connection</description>
    <res-ref-name>postgresqlDB</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
   </resource-ref>
  
  <resource-ref>
    <description>DB Connection</description>
    <res-ref-name>mysqlDB</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
   </resource-ref>
</web-app>