    <servlet-name>addNewPsn</servlet-name>
    <servlet-class>servlet.AddNewPsn</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>addNewPsn</servlet-name>
    <url-pattern>/AddNewPerson.do</url-pattern>
  </servlet-mapping>    
  <servlet>
    <servlet-name>addNewCustomerBasic</servlet-name>
    <servlet-class>servlet.InsertNewCustomerBasic</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>addNewCustomerBasic</servlet-name>
    <url-pattern>/AddNewCustomerBasic.do</url-pattern>
  </servlet-mapping>
   
  <servlet>
    <servlet-name>addNewVehicle</servlet-name>
    <servlet-class>servlet.AddNewVehicle</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>addNewVehicle</servlet-name>
    <url-pattern>/AddNewVehicle.do</url-pattern>
  </servlet-mapping>

  <servlet>
