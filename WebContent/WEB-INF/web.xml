<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:javaee="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <javaee:display-name>Insurance Web App</javaee:display-name>
  <servlet>
    <servlet-name>queryAllCustomer</servlet-name>
    <servlet-class>servlet.QueryAllCustomerServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>queryAllCustomer</servlet-name>
    <url-pattern>/QueryAllCustomer.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>editCustomerDetail</servlet-name>
    <servlet-class>servlet.EditCustomerDetail</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>editCustomerDetail</servlet-name>
    <url-pattern>/EditCustomerDetail.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>saveCustomerBasic</servlet-name>
    <servlet-class>servlet.SaveCustomerBasic</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>saveCustomerBasic</servlet-name>
    <url-pattern>/SaveCustomerBasicInfo.do</url-pattern>
  </servlet-mapping>  
