  <servlet-mapping>
    <servlet-name>insertNewVehicle</servlet-name>
    <url-pattern>/InsertNewVehicle.do</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>editVehicleDetail</servlet-name>
    <servlet-class>servlet.EditVehicleDetail</servlet-class>
